<h1>Posts</h1>


<ul>
  <% @posts.each do |post| %>
      <li>
        <%= post.title %>
        <% if user_signed_in? %>
          <p>Author: <%= post.user.name %></p>
        <% end %>
      </li>
  <% end %>
</ul>

<%= link_to "New Article", new_post_path %>
<% if user_signed_in? %>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
<% else %>
  <%= button_to "Sign in", new_user_session_path, method: :get %>
<% end %>